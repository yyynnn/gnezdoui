{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build/",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "pretty": true,
    "lib": ["es2017", "dom", "es6", "es2015", "es5"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "src/docs/*", "theme/*", "lib/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types", "./src/lib/"]
  },
  "include": ["playground/**/*", "webpack/**/*", "server/**/*", "config/**/*", "src/**/*", "types/index.d.ts"],
  "exclude": ["./node_modules", "!node_modules/@types", "./build"],
  "files": ["./types/index.d.ts"]
}
